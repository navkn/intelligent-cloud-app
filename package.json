{
    "name": "intelligent-cloud-app",
    "version": "0.0.1",
    "author": "naveen kothuri",
    "bugs": "https://github.com/naveen kothuri/intelligent-cloud-app/issues",
    "dependencies": {
        "@lwc/synthetic-shadow": "^2.7.4",
        "@salesforce-ux/design-system": "^2.17.3",
        "compression": "^1.7.4",
        "express": "^4.17.2",
        "helmet": "^5.0.2",
        "jsforce": "^1.11.0",
        "lightning-base-components": "^1.14.3-alpha",
        "sf-jwt-token": "^1.3.0"
    },
    "engines": {
        "node": "16.13.2",
        "npm": ">=6.4.1",
        "yarn": ">=1.9.4"
    },
    "homepage": "https://github.com/naveen kothuri/intelligent-cloud-app",
    "keywords": [
        "lwc"
    ],
    "license": "MIT",
    "nodemonConfig": {
        "watch": [
            "scripts/**/*.js"
        ],
        "ext": "js",
        "ignore": [
            "src/**/*.spec.js",
            "src/**/*.test.js"
        ],
        "exec": "node ./scripts/server.js"
    },
    "repository": "naveen kothuri/intelligent-cloud-app",
    "scripts": {
        "build": "lwc-services build -m production",
        "build:development": "lwc-services build",
        "lint": "eslint ./scripts/**/*.js",
        "postinstall": "husky install",
        "precommit": "npm run prettier:verify && [ $? -eq 0 ] && npm run lint",
        "prettier": "prettier --write \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "prettier:verify": "prettier --list-different \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "start": "node scripts/server.js",
        "test:unit": "lwc-services test:unit",
        "test:unit:coverage": "lwc-services test:unit --coverage",
        "test:unit:debug": "lwc-services test:unit --debug",
        "test:unit:watch": "lwc-services test:unit --watch",
        "watch": "run-p watch:client watch:server",
        "watch:client": "lwc-services watch",
        "watch:server": "nodemon"
    },
    "devDependencies": {
        "eslint": "^7.32.0",
        "eslint-plugin-inclusive-language": "^2.2.0",
        "husky": "^7.0.4",
        "lwc-services": "^3.2.2",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.5.1"
    }
}
